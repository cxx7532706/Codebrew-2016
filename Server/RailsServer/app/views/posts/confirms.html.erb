<div class="panel panel-default">
    <div class="panel-heading" align="center"><h2><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span><br>Confirmed List</h2></div>
    <!-- /.panel-heading -->
    <div class="panel-body">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Quantity(kg)</th>
                        <th>Organization</th>
                        <th>Pick Up Time</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @posts.each do |post| %>
                        <tr class="odd gradeX">
                            <td><%= link_to post.item, post, :class =>"btn btn-info btn-sm white-font survey-btn"%></td>
                            <td><%= post.quantity %></td>
                            <td><%= post.org %></td>
                            <td><%= post.picktime.to_formatted_s(:db) %></td>
                            <td>
                                <%= link_to 'Finish', confirm_post_path(post), :class =>"btn btn-warning btn-sm white-font survey-btn" %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
    </div>
    <!-- /.panel-body -->
</div>
<script>
$(document).ready(function() {
    $('#dataTables-example').DataTable({
        responsive: true
    });
    $('[data-toggle="tooltip"]').tooltip();
});
</script>

<div class="panel panel-default">
    <div class="panel-heading" align="center"><h2><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span><br>Listing Donations</h2></div>
    <!-- /.panel-heading -->
    <div class="panel-body">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Quantity(kg)</th>
                        <th>EXP Date</th>
                        <th>Avaliable Time</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @posts.each do |post| %>
                        <tr class="odd gradeX">
                            <td><%= link_to post.item, post, :class =>"btn btn-info btn-sm white-font survey-btn"%></td>
                            <td><%= post.quantity %></td>
                            <td><%= post.expir.to_formatted_s(:db) %></td>
                            <td><%= post.available_time_start.to_formatted_s(:db) %>-<%= post.available_time_end.to_formatted_s(:db) %></td>
                            <td>
                              <% if post.status == 0 %>
                                <%= link_to 'Edit', edit_post_path(post), :class =>"btn btn-warning btn-sm white-font survey-btn" %>
                                <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure you want to delete this donate?' }, :class =>"btn btn-danger btn-sm white-font survey-btn" %>
                              <% else %>
                                Accpeted
                              <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
  <%= link_to 'New Donation', new_post_path, :class =>"btn btn-success btn-sm white-font" %>
    </div>
    <!-- /.panel-body -->
</div>
<script>
$(document).ready(function() {
    $('#dataTables-example').DataTable({
        responsive: true
    });
    $('[data-toggle="tooltip"]').tooltip();
});
</script>
